{
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "2.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "XSS",
    "default_popup": "GUI.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    }
  },
  "permissions": [
    "contextMenus",
    "storage",
    "downloads",
    "scripting",
    "tabs"
  ],
  "content_scripts" : [{
    "matches" : ["<all_urls>"],
    "js" : ["extension/content.js"],
    "run_at": "document_start"
  }],
  "background": {
    "service_worker": "extension/background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}